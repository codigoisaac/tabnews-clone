{
  "name": "tabnews-clone",
  "version": "0.1.0",
  "description": "Implementation of tabnews.com.br for curso.dev",
  "homepage": "https://github.com/codigoisaac/tabnews-clone#readme",
  "bugs": {
    "url": "https://github.com/codigoisaac/tabnews-clone/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codigoisaac/tabnews-clone.git"
  },
  "license": "MIT",
  "author": "Isaac Muniz",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && npm run services:wait:database && concurrently --names next,jest --hide next --kill-others --success command-jest 'next dev' 'jest --runInBand --verbose'",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "16.0.8",
    "node-pg-migrate": "7.6.1",
    "pg": "8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.0.1",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.8",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.2.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
